{
    "comments": "Used by the DirectoryTool (and DirectoryTreeTool).\nFor options relating to rows containing a directory, use the \"dir\" file instead.",
    "includes": [
        "file",
        "dir"
    ],
    "options": [
        {
            "type": "task",
            "task": "uk.co.nickthecoder.paratask.tools.DirectoryTool",
            "code": "^",
            "label": "Open Parent Directory",
            "isRow": false,
            "isMultiple": false,
            "prompt": false,
            "newTab": false,
            "refresh": false,
            "parameters": [
                {
                    "name": "directory",
                    "expression": "tool.directory.parentFile"
                },
                {
                    "name": "depth",
                    "value": "1"
                },
                {
                    "name": "onlyFiles",
                    "value": ""
                },
                {
                    "name": "extensions",
                    "values": [
                        
                    ]
                },
                {
                    "name": "includeHidden",
                    "value": "false"
                },
                {
                    "name": "enterHidden",
                    "value": "false"
                },
                {
                    "name": "includeBase",
                    "value": "false"
                },
                {
                    "name": "autoRefresh",
                    "value": "true"
                }
            ]
        },
        {
            "type": "groovy",
            "script": "if ( row.file.isDirectory() ) { tool.directoryP.value = row.file; tool } else { desktop.open( row.file ) }",
            "code": ".",
            "label": "Open File / Work with Directory",
            "isRow": true,
            "isMultiple": false,
            "prompt": false,
            "newTab": false,
            "refresh": false
        }
    ]
}